{
    "name": "MathTrail Mentor DevContainer",
    "workspaceFolder": "/workspace/mathtrail-mentor",
    "features": {
        "ghcr.io/devcontainers/features/go:1.21": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {},
        "ghcr.io/dapr/cli/dapr-cli:0": {},
        "ghcr.io/eitsupi/devcontainer-features/just:0": {}
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--network=host"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteEnv": {
        "MINIKUBE_HOME": "${containerWorkspaceFolder}/.minikube"
    }
}
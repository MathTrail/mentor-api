{
    "name": "MathTrail Mentor DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.25.7"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {
            "helm": "4.1.0",
            "version": "1.35.0",
            "minikube": "none"
        },
        "ghcr.io/eitsupi/devcontainer-features/just:0.1.1": {}
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.kube,target=/home/vscode/.kube-host,type=bind,consistency=cached,readonly"
    ],
    "runArgs": [
        "--add-host=host.docker.internal:host-gateway",
        "--add-host=k3d-mathtrail-registry.localhost:host-gateway"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-azuretools.vscode-docker",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "ms-kubernetes.helm",
                "redhat.vscode-yaml",
                "eamodio.gitlens",
                "sclu1034.justfile",
                "vscode-icons-team.vscode-icons",
                "waderyan.gitblame",
                "donjayamanne.githistory",
                "Tim-Koehler.helm-intellisense",
                "anthropic.claude-code",
                "ckolkman.vscode-postgres"
            ],
            "settings": {
                "vscode-postgres.connections": [
                    {
                        "label": "mentor-dev",
                        "host": "localhost",
                        "port": 5432,
                        "user": "postgres",
                        "password": "mathtrail",
                        "database": "mentor",
                        "ssl": false
                    }
                ]
            }
        }
    },
    "postStartCommand": "bash .devcontainer/post-start.sh",
    "forwardPorts": [8080]
}
